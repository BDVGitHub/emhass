{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "EMHASS install",
            "command": "uv",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "pip", "install", "--force-reinstall", "--index-strategy", "unsafe-best-match", ".[test]"
            ],
            "presentation": {
                "echo": true,
                "panel": "shared",
                "focus": true
            },
        },
        {
            "label": "EMHASS install with dependencies",
            "command": "uv",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "pip", "install", "--reinstall", "--index-strategy", "unsafe-best-match", ".[test]"
            ],
            "presentation": {
                "echo": true,
                "panel": "shared",
                "focus": true
            }
        }
    ]
}